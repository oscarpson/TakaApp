<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="joslabs.taka.specificbuilding.SpecificRoom"
    tools:showIn="@layout/activity_specific_room">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rmheader"
    android:text="Floor 1,Rm 2"
    android:textAlignment="center"
    style="@style/Base.TextAppearance.AppCompat.Headline"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtmonth"
        android:layout_below="@id/rmheader"
        android:layout_alignParentLeft="true"
        android:text="Month"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txttatus"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rmheader"
        android:text="Status"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtreceipt"
        android:layout_below="@id/rmheader"
        android:text="RNo"
        android:layout_alignParentRight="true"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/txtmonth"
        android:id="@+id/carda">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/layerjan">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Jan"
                android:id="@+id/txtmonthname"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/txtstatuspay"
                android:text="Paid"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtreceiptno"
                android:layout_alignParentRight="true"
                android:text="E3435"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
