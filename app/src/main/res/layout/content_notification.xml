<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="joslabs.taka.notification.Notification"
    tools:showIn="@layout/activity_notification">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:id="@+id/carda"
    android:layout_margin="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Paper request"
            android:id="@+id/txtppr"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtbname"
            android:layout_below="@id/txtppr"
            android:text="Natasha Building,Fr3,Rm12"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/txtbname"
            android:id="@+id/txtvlocation"
            android:text="View map"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/txtbname"
            android:layout_toRightOf="@id/txtvlocation"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:id="@+id/cardb"
        android:layout_below="@id/carda"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Dump request"
                android:id="@+id/txtpprb"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtbnameb"
                android:layout_below="@id/txtpprb"
                android:text="Valentines,Fr1,Rm2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/txtbnameb"
                android:id="@+id/txtvlocationb"
                android:text="View map"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/txtbnameb"
                android:layout_toRightOf="@id/txtvlocationb"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:id="@+id/cardc"
        android:layout_below="@id/cardb"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Paper request"
                android:id="@+id/txtpprc"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtbnamec"
                android:layout_below="@id/txtpprc"
                android:text="St mary opp Canopy,Fr4,Rm17"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/txtbnamec"
                android:id="@+id/txtvlocationc"
                android:text="View map"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/txtbnamec"
                android:layout_toRightOf="@id/txtvlocationc"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
